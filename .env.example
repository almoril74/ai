# Datenbank-Konfiguration
DATABASE_URL=postgresql://patientenakte:secure_password@localhost:5432/patientenakte_db
DATABASE_ECHO=False

# Verschl√ºsselung (WICHTIG: Generiere eigene Keys mit: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
MASTER_ENCRYPTION_KEY=CHANGE_ME_32_BYTE_BASE64_KEY_HERE=
FIELD_ENCRYPTION_KEY=CHANGE_ME_32_BYTE_BASE64_KEY_HERE=

# JWT-Authentifizierung (Generiere mit: openssl rand -hex 32)
SECRET_KEY=CHANGE_ME_RANDOM_SECRET_KEY_HERE
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Sicherheit
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
MAX_LOGIN_ATTEMPTS=5
LOGIN_TIMEOUT_MINUTES=30
SESSION_TIMEOUT_MINUTES=60

# SimpliMed-Integration
SIMPLIMED_IMPORT_PATH=/opt/simplimed/exports
SIMPLIMED_BACKUP_PATH=/opt/backups/simplimed

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/patientenakte/app.log
AUDIT_LOG_FILE=/var/log/patientenakte/audit.log

# Backup
BACKUP_PATH=/opt/backups/encrypted
BACKUP_RETENTION_DAYS=365

# E-Mail-Benachrichtigungen (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=notifications@example.com
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com

# Entwicklung
DEBUG=False
TESTING=False
